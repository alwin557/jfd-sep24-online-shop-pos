<%- include('../../v_layout/head') %>
<%- include('../../v_layout/olshop-header') %>

<body class="bg-body-secondary">
    <div class="container my-5">
        <h1>Keranjang belanjaan kamu</h1>
        <div class="row">
            <div class="col-lg-8">
                <% for( let i in detailProduk_keranjang ) { %>
                    <div class="card border-0 mb-3">
                        <div class="row g-0">
                            <div class="col-md-3 text-center p-4">
                                <img src="/upload/produk-foto/<%= detailProduk_keranjang[i].foto1 %>" class="img-fluid rounded-start" style="height: 100px; object-fit: contain;" alt="...">
                            </div>
                            <div class="col-md-9">
                                <div class="card-body">
                                    <h4 class="card-title"><%= detailProduk_keranjang[i].produk_nama %></h4><hr>
                                    <div class="row">
                                        <div class="col-6">
                                            <span class="card-text"><b>Rp<%= Number(detailProduk_keranjang[i].harga).toLocaleString('id-ID') %></b></span><br>
                                            <small class="card-text">stok: <%= detailProduk_keranjang[i].stok %></small><br>
                                        </div>
                                        <div class="col-6">
                                            <div class="row">
                                                <div class="col-2">
                                                    <a href="" class="btn btn-sm btn-outline-danger">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </a>
                                                </div>
                                                <div class="col-10">
                                                    <input type="number" name="form_qty" value="<%= detailProduk_keranjang[i].qty %>" class="form-control form-control-sm">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>
</body>

<%- include('../../v_layout/olshop-footer') %>
<%- include('../../v_layout/foot') %>